.per-detail {
  display: flex;
  flex-direction: row;
}

.left {
  width: 50%;
  display: flex;
  flex-direction: row;
}

.right {
  width: 50%;
  display: flex;
  flex-direction: row-reverse;
  padding-top: 30rpx;
  padding-right: 30rpx;
}

.right-pro {
  display: flex;
  flex-direction: column;
}

.avatar {
  margin-left: 12rpx;
  width: 85rpx;
  height: 85rpx;
  border-radius: 50%;
  border: 7rpx solid #47d39f;
  margin-top: 30rpx;
  margin-bottom: 30rpx;
}

.reply {
  margin-right: 30rpx;
  margin-bottom: 30rpx;
  background-color: white;
  border: 1px solid #ebebeb;
  border-radius: 5px;
  font-size: 12pt;
  color: #c2c2c2;
  padding: 12rpx;
}
