/* pages/record/record.wxss */

.container {
  padding-left: 30rpx;
  padding-right: 30rpx;
  background-color: sandybrown;
}

.title {
  padding-left: 30rpx;
  padding-right: 30rpx;
  padding-top: 25rpx;
  padding-bottom: 20rpx;
  display: flex;
  flex-direction: row;
}

.date {
  width: 50%;
  display: flex;
  flex-direction: row;
}

.font-date {
  color: #4a4a4a;
  font-size: 16pt;
}

.type {
  width: 50%;
  display: flex;
  flex-direction: row-reverse;
}

.v-record {
  background-color: white;
  display: flex;
  flex-direction: row;
  padding-left: 30rpx;
  padding-right: 30rpx;
}

.v-detail {
  width: 70%;
  display: flex;
  flex-direction: column;
  padding-top: 30rpx;
  padding-bottom: 30rpx;
}

.v-time {
  display: flex;
  flex-direction: row;
}

.tips {
  margin-top: 10rpx;
  background-color: #fa9ebe;
  justify-content: center;
  border-radius: 40rpx;
  font-size: 10pt;
  color: #dc1259;
  padding-left: 10rpx;
  padding-right: 10rpx;
  padding-top: 5rpx;
  padding-bottom: 5rpx;
  border: 1rpx solid #dc1259;
}

.time {
  margin-top: 10rpx;
  color: #b9b9b9;
  padding-left: 10rpx;
  font-size: 12pt;
}

.v-type {
  width: 30%;
  display: flex;
  justify-content: center;
  flex-direction: row-reverse;
  padding-top: 45rpx;
  padding-bottom: 45rpx;
}

.space-line {
  width: 100%;
  background-color: #e7e7e7;
  height: 2rpx;
  margin-left: 30rpx;
}

.apply{
    width: 100%;
    position: absolute;
    bottom: 0;
    background-color: white;
    color: #1eb1da;
    font-weight: bold;
    justify-content: center;
    font-size: 16pt;
}