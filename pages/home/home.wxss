}

.apply-icon {
  width: 48rpx;
  height: 48rpx;
}

.apply {
  display: flex;
  background-color: white;
  flex-direction: row;
}

.apply-wraper {
  display: flex;
  height: 118rpx;
  text-align: center;
  flex-direction: row;
  padding-left: 30rpx;
  margin-top: 38rpx;
}

.tip-font{
    color:#b1b1b1;
    font-size: 12pt;
}
.excep {
  width: 120rpx;
  text-align: center;
