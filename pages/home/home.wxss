/* pages/home/home.wxss */
page {  
  background-color: #f9f9f9;  
}
.container {
  background-color: #eaeaea;
  width: 100%;
  height: 100%;
}

.date {
  padding-top: 35rpx;
  padding-bottom: 35rpx;
  padding-left: 30rpx;
  padding-right: 20rpx;
  background-color: white;
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 150rpx;
}

.date-font {
  font-size: 12pt;
  font-weight: bold;
}

.date-week {
  margin-top: 30rpx;
  display: flex;
  flex-direction: column;
}

.date-mark {
  margin-top: 30rpx;
  margin-left: 34rpx;
  margin-right: 20rpx;
  vertical-align: middle;
}

.date-circle {
  width: 20rpx;
  height: 20rpx;
  background-color: #1eafdb;
  border-radius: 50%;
}

.date-line {
  height: 20rpx;
  width: 2rpx;
  margin-bottom: 8rpx;
  margin-top: 8rpx;
  margin-left: 8rpx;
  background-color: #1eafdb;
}

/*打卡*/

.clock {
  text-align: center;
  display: flex;
  flex-direction: column;
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  background-color: #1eafdb;
  margin-left: 200rpx
}


.smallcircle{
  width: 15rpx;
  height: 15rpx;
  border-radius: 50%;
  background-color: #f63d7c;
